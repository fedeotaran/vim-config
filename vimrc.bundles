if &compatible
 set nocompatible
end

filetype off
set rtp+=~/.vim/bundle/Vundle.vim/
call vundle#begin()

" Let Vundle manage Vundle
Plugin 'gmarik/Vundle.vim'

" Define bundles

" Apparence
Plugin 'morhetz/gruvbox'         " Theme colors
Plugin 'itchyny/lightline.vim'   " Information line

" Project
Plugin 'ctrlpvim/ctrlp.vim'          " Search projects files
Plugin 'tacahiroy/ctrlp-funky'       " Search methods definitions on current file
Plugin 'scrooloose/nerdtree.git'     " Show files tree on project
Plugin 'jistr/vim-nerdtree-tabs.git' " NERDTree feel like a true panel, independent of tabs.

" Git
Plugin 'tpope/vim-fugitive' " Git wrapper
Plugin 'tpope/vim-git'

" Lenguages
Plugin 'pangloss/vim-javascript'
Plugin 'othree/javascript-libraries-syntax.vim'
Plugin 'vim-ruby/vim-ruby'
Plugin 'tpope/vim-rails'

" Snippets
Plugin 'SirVer/ultisnips'
Plugin 'honza/vim-snippets'

" Others
Plugin 'bogado/file-line.git'
Plugin 'jiangmiao/auto-pairs'
Plugin 'tpope/vim-endwise.git'
Plugin 'tpope/vim-ragtag'
Plugin 'tpope/vim-repeat.git'
Plugin 'tpope/vim-surround.git'
Plugin 'tpope/vim-unimpaired'
Plugin 'junegunn/vim-easy-align'

" Sources local bundles
if filereadable(expand("~/.vimrc.bundles.local"))
  source ~/.vimrc.bundles.local
endif

call vundle#end()
filetype on
